generator client {
    provider = "prisma-client-js"
    // output   = "..src/generated/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Book {
    id       String  @id @default(cuid())
    title    String
    // 1-n
    authorId String
    author   Author  @relation(fields: [authorId], references: [id])
    ISBN     String
    //n-m
    genre    Genre[]
    memberId String?
    member   Member? @relation(fields: [memberId], references: [id])
    
}

model Author {
    id    String @id @default(cuid())
    name  String
    bio   String
    books Book[]
}

model Genre {
    id    String @id @default(cuid())
    //n-m
    books Book[]
    name  String @unique
}

model Member {
    id      String @id @default(cuid())
    name    String
    email   String
    address String
    books   Book[]
}
